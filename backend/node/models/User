const mongoose = require("mongoose");

const UserSchema = new mongoose.Schema({
  name: { type: String, required: [true, "must provide name"] },
  email: { type: String, required: [true, "must provide Email"] },
  password: { type: String, required: true },

  steps_completed: { type: Number, default: 0 }, // Added steps_completed field

  stats: [
    {
      bill_type: {
        type: String,
        enum: ["electricity", "water", "gas"],
        required: true,
      },
      bill_provider: { type: String, required: true },
      billing_period: { type: String, required: true },

      consumption_value: { type: Number, required: true },
      consumption_unit: { type: String, required: true },
      consumption_previous_value: { type: Number, default: null },

      amount_value: { type: Number, required: true },
      amount_currency: { type: String, required: true },

      consumption_rating: {
        type: String,
        enum: ["excellent", "good", "average", "high", "excessive"],
        required: true,
      },
      consumption_per_person: { type: Number, required: true },
      regional_average_per_person: { type: Number, required: true },
      percentage_diff_from_average: { type: Number, required: true },
      seasonal_factor: { type: Number, min: 0.8, max: 1.2, required: true },
      sustainability_score: { type: Number, min: 0, max: 100, required: true },

      key_insights: { type: [String], required: true },
      recommendations: { type: [String], required: true },

      estimated_savings_potential_value: { type: Number, required: true },
      estimated_savings_potential_unit: { type: String, required: true },
    },
  ],
});

module.exports = mongoose.model("User", UserSchema);
